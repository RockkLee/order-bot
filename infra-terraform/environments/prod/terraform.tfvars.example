aws_region         = "ap-northeast-1"
vpc_id             = "vpc-xxxxxxxx"
public_subnet_ids  = ["subnet-public-a", "subnet-public-c"]
private_subnet_ids = ["subnet-private-a", "subnet-private-c"]
hosted_zone_id     = "ZXXXXXXXXXXXXX"

alb_certificate_arn  = "arn:aws:acm:ap-northeast-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
orderbot_domain      = "api.example.com"
orderbot_mgmt_domain = "mgmt-api.example.com"

order_bot_image      = "123456789012.dkr.ecr.ap-northeast-1.amazonaws.com/order-bot-svc:latest"
order_bot_mgmt_image = "123456789012.dkr.ecr.ap-northeast-1.amazonaws.com/order-bot-mgmt-svc:latest"

default_desired_count = 1

order_bot_environment = {
  HOST           = "0.0.0.0"
  PORT           = "8000"
  ROOT_PATH      = ""
  IS_PRODUCTION  = "true"
  DATABASE_URL   = "postgresql+psycopg://postgres:password@10.0.10.10:5432/order_bot"
  DATABASE_SCHEMA = "public"
  SEED_MENU      = "false"
  MISTRAL_API_KEY = "replace-me"
  MISTRAL_MODEL   = "mistral-small-latest"
}

order_bot_mgmt_environment = {
  ADDRESS                        = "0.0.0.0"
  PORT                           = "8080"
  GIN_MODE                       = "release"
  BLUEPRINT_DB_DATABASE          = "order_bot"
  BLUEPRINT_DB_PASSWORD          = "password"
  BLUEPRINT_DB_USERNAME          = "postgres"
  BLUEPRINT_DB_PORT              = "5432"
  BLUEPRINT_DB_HOST              = "10.0.10.10"
  BLUEPRINT_DB_SCHEMA            = "order_bot_mgmt"
  BLUEPRINT_DB_ORDER_BOT_SCHEMA  = "public"
  JWT_ACCESS_SECRET              = "replace-me"
  JWT_REFRESH_SECRET             = "replace-me"
}
